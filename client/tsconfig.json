{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022", "DOM"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "types": ["vite/client"],
    "paths": {
      "@app/*": ["src/app/*"],
      "@components/*": ["src/components/*"],
      "@pages/*": ["src/pages/*"],
      "@features/*": ["src/features/*"],
      "@shared/*": ["src/shared/*"],
      "@locales/*": ["src/locales/*"],
      "@types": ["src/types/index.ts"],
      "@types/*": ["src/types/*"]
    }
  },
  "include": ["src"]
}